- model_class = ExerciseSession
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:exercise_id)
      %th= model_class.human_attribute_name(:workout_session_id)
      %th= model_class.human_attribute_name(:rest)
      %th= model_class.human_attribute_name(:sets)
      %th= model_class.human_attribute_name(:trainer_id)
      %th= model_class.human_attribute_name(:client_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @exercise_sessions.each do |exercise_session|
      %tr
        %td= link_to exercise_session.id, exercise_session_path(exercise_session)
        %td= exercise_session.exercise_id
        %td= exercise_session.workout_session_id
        %td= exercise_session.rest
        %td= exercise_session.sets
        %td= exercise_session.trainer_id
        %td= exercise_session.client_id
        %td=l exercise_session.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_exercise_session_path(exercise_session), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), exercise_session_path(exercise_session), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_exercise_session_path, :class => 'btn btn-primary'
