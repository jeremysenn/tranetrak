- model_class = Client
%h3.text-info
  Client
  %i.icon-user

%dl.dl-horizontal
  %dt
    %strong= model_class.human_attribute_name(:first_name)
  %dd= @client.first_name
  %dt
    %strong= model_class.human_attribute_name(:last_name)
  %dd= @client.last_name
  %dt
    %strong= model_class.human_attribute_name(:email)
  %dd= @client.email
  %dt
    %strong= model_class.human_attribute_name(:phone)
  %dd= @client.phone
  %dt
    %strong= model_class.human_attribute_name(:dob)
  %dd= @client.dob

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), clients_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_path(@client), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), client_path(@client), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
