- model_class = WorkoutSession
.page-header
  %h3.text-error
    %i.icon-tasks
    = "Workout Session"

%p
  %strong= model_class.human_attribute_name(:workout_id) + ':'
  %br
  = link_to @workout_session.workout.name, workout_path(@workout_session.workout)

- unless @workout_session.trainer.blank?
  %p
    %strong= model_class.human_attribute_name(:trainer_id) + ':'
    %br
    = link_to @workout_session.trainer.full_name, trainer_path(@workout_session.trainer)

- unless @workout_session.client.blank?
  %p
    %strong= model_class.human_attribute_name(:client_id) + ':'
    %br
    = link_to @workout_session.client.full_name, client_path(@workout_session.client)
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @workout_session.date.strftime("%A %m/%d/%Y at %I:%M%p")
%p
  %strong= model_class.human_attribute_name(:reminder_sent) + ':'
  %br
  = @workout_session.reminder_sent? ? 'Yes' : 'No'

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), workout_sessions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_workout_session_path(@workout_session), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), workout_session_path(@workout_session), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
