        = f.input :arm, :label => 'Arm', hint: "#{link_to '<i class="icon-question-sign"></i>'.html_safe, '#arm_pic', "data-toggle" => "modal", :href => "#arm_pic"}", :input_html => {:min => 1, :value => number_with_precision(f.object.arm, precision: 2), :class => 'input-small' }
        %div{:id => "arm_pic", :class => "modal", :style => "display:none;"}
