          %div{:id => "midaxil_pic", :class => "modal", :style => "display:none;"}
            .modal-header
              = link_to "×", '#', :class => "close", "data-dismiss" => "modal"
              = "Midaxillary Skinfold Measure"
            .modal-body
              .pagination-centered
                = image_tag('midaxillary-m.jpg')
                = image_tag('midaxillary-f.jpg')
            .modal-footer
              = link_to 'Close', '#', :class => 'btn', "data-dismiss" => "modal"
        .all.male
          = f.input :umbilical, :label => "Abdominal", hint: "#{link_to '<i class="icon-question-sign"></i>'.html_safe, '#umbilical_pic', "data-toggle" => "modal", :href => "#umbilical_pic"}", :input_html => {:min => 1, :value => number_with_precision(f.object.umbilical, precision: 2), :class => 'input-small' }
          %div{:id => "umbilical_pic", :class => "modal", :style => "display:none;"}
            .modal-header
