!!!
%html

  %head
    %title= content_for?(:title) ? yield(:title) : "tranetrak"
    = favicon_link_tag 'favicon.ico'
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    = yield(:head)

  %body
    .container
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/home#index"}
              %i.icon-star
              tranetrak.com
            - unless current_user.blank?
              .nav-collapse.collapse
                %ul.nav
                  %li= link_to "Users", users_path if current_user.username == 'jeremysenn'
                  %li= link_to "Trainers", trainers_path if current_user.username == 'jeremysenn'
                  %li= link_to "Subscription", '#'
                  %li= link_to "Settings", '#'
                  %li= link_to "Help", '#'
                .navbar-text.pull-right
                  &nbsp;
                  = link_to "Log out", logout_path, :confirm => "Are you sure you want to log out?", :title => "Log out", :class => "btn"
                .navbar-text.pull-right
                  - unless current_user.username == 'jeremysenn'
                    Welcome,
                    = link_to raw("#{current_user.username}"), user_path(current_user)
                  - else
                    = link_to raw("#{current_user.username} <span class='red_text'>(admin)</span>"), user_path(current_user)
      = yield
    #footer
      .container
        %p{:class => "muted credit", :style => "text-align:center"}
          = "tranetrak.com - Copyright #{Date.today.year}"