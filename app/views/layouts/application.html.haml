!!!
%html

  %head
    %title= content_for?(:title) ? yield(:title) : "tranetrak"
    = favicon_link_tag 'favicon.ico'
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    = yield(:head)

  %body
    .container
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/home#index"}
              %p.text-error
                %i.icon-star
                tranetrak.com
            - unless current_user.blank?
              .nav-collapse.collapse
                %ul.nav.custom
                  %li{:class => params[:controller] == "users" ? "active" : ""}= link_to "Users", users_path if current_user.username == 'jeremysenn'
                  %li{:class => params[:controller] == "trainers" ? "active" : ""}= link_to "Trainers", trainers_path if current_user.username == 'jeremysenn'
                  %li.dropdown{:class => params[:controller] == "calendars" ? "active" : ""}
                    %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
                      %strong
                        %p.text-purple
                          %i.icon-calendar
                          = "Calendar"
                          %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => calendars_path(:view => 'week')}
                            Week view
                        %li
                          %a{:href => calendars_path}
                            Month view
                  %li.dropdown{:class => params[:controller] == "workouts" ? "active" : ""}
                    %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
                      %strong
                        %p.text-orange
                          %i.icon-tasks
                          = "Workouts"
                          %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => '#'}
                            New Workout
                        %li
                          %a{:href => '#'}
                            All Workouts
                    
                  %li.dropdown{:class => params[:controller] == "bodycomps" ? "active" : ""}
                    %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
                      %strong
                        %p.text-error
                          %i.icon-th-list
                          = "Bodycomps"
                          %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => new_bodycomp_path}
                            New Bodycomp
                        %li
                          %a{:href => bodycomps_path}
                            All Bodycomps
                  %li.dropdown{:class => params[:controller] == "clients" ? "active" : ""}
                    %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
                      %strong
                        %p.text-success
                          %i.icon-user
                          = "Clients"
                          %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => new_client_path}
                            New Client
                        %li
                          %a{:href => clients_path}
                            All Clients
                  %li{:class => params[:controller] == "images" ? "active" : ""}
                    %a{:href => '#'}
                      %strong
                        - if false
                          %p.text-warning
                        %p
                          %i.icon-camera
                          = "Pictures"
                  %li{:class => params[:controller] == "documents" ? "active" : ""}
                    %a{:href => '#'}
                      %strong
                        %p.text-yellow
                          %i.icon-file
                          = "Documents"
                  %li{:class => params[:controller] == "notifications" ? "active" : ""}
                    %a{:href => '#'}
                      %strong
                        %p.text-info
                          %i.icon-envelope
                          = "Notifications"
                  %li.divider-vertical
                  %li.dropdown
                    %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
                      %strong
                        %i.icon-cog
                        %b.caret
                    %ul.dropdown-menu
                      %li
                        %a{:href => user_path(current_user)}
                          %strong= raw("#{current_user.username}")
                          %br
                          %small= "Edit settings"
                      %li.divider
                      %li= link_to "Subscription", '#'
                      %li.divider
                      %li= link_to "Help", '#'
                      %li= link_to "Log out", logout_path, :confirm => "Are you sure you want to log out?", :title => "Log out"
                .navbar-text.pull-right
                  - unless current_user.username == 'jeremysenn'
                    =# link_to raw("#{current_user.username}"), user_path(current_user)
                  - else
                    = link_to raw("#{current_user.username} <span class='red_text'>(admin)</span>"), user_path(current_user)
      = yield
    #footer
      .container
        %p{:class => "muted credit", :style => "text-align:center"}
          = "tranetrak.com - Copyright #{Date.today.year}"
  