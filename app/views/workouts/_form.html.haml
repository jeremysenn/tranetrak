= simple_form_for @workout, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  - if current_user.is_trainer?
    = f.input :trainer_id, :as => :hidden, :input_html => {:value => current_user.trainer.id}
  - elsif current_user.is_client?
    = f.input :client_id, :as => :hidden, :input_html => {:value => current_user.client.id}
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), workouts_path, :class => 'btn'
