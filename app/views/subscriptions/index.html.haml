- model_class = Subscription
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:plan_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:stripe_customer_token)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @subscriptions.each do |subscription|
      %tr
        %td= subscription.id
        %td= subscription.plan.name
        %td= subscription.user.full_name
        %td= subscription.email
        %td= subscription.stripe_customer_token
        %td= l subscription.created_at
        %td
          - if false
            = link_to t('.show', :default => t("helpers.links.show")),  |
              subscription_path(subscription), :class => 'btn btn-mini' |
            -#
            = link_to t('.edit', :default => t("helpers.links.edit")),       |
              edit_subscription_path(subscription), :class => 'btn btn-mini' |
            -#
            = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
              subscription_path(subscription),                                                                             |
              :method => :delete,                                                                                          |
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
              :class => 'btn btn-mini btn-danger'                                                                          |
- if false
  = link_to t('.new', :default => t("helpers.links.new")), |
    new_subscription_path,                                 |
    :class => 'btn btn-primary'                            |