- model_class = Subscription
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:email)
      \:
  %dd= @subscription.email
  %dt
    %strong
      = model_class.human_attribute_name(:plan_id)
      \:
  %dd= @subscription.plan.name.titleize
  %dd= @subscription.plan.description
  %dd= number_to_currency(@subscription.plan.price)
  %dt
    %strong
      = "Last 4 of card"
      \:
  %dd= @subscription.last_4_digits
  - if current_user.is_superuser?
    %dt
      %strong
        = model_class.human_attribute_name(:stripe_customer_token)
        \:
    %dd= @subscription.stripe_customer_token
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")),
    :back, :class => 'btn'
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),
    edit_subscription_path(@subscription), :class => 'btn'
  - if false
    = link_to t('.destroy', :default => t("helpers.links.destroy")),
      subscription_path(@subscription),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger'                                                                                   